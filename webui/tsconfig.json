{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		"build",
		".svelte-kit",
		"postcss.config.js",
		"svelte.config.js",
		"tailwind.config.js",
		"vite.config.js"
	],
	"include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
